{% extends 'base.html.twig' %}

{% block navbar %}
    {{ parent() }}
    <nav class="navbar navbar-default navbar-sub">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#collapseable-message" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="collapseable-message">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a id="inbox-link" class="js-toggle-active" href="{{ path('fos_message_inbox') }}">
                            Inbox
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li>
                        <a id="sent-items-link" class="js-toggle-active" href="{{ path('fos_message_sent') }}">
                            Sent
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li>
                        <a id="deleted-items-link" class="js-toggle-active" href="{{ path('fos_message_deleted') }}">
                            Deleted
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li>
                        <a id="compose-link" class="js-toggle-active" href="{{ path('fos_message_thread_new') }}">
                            Compose
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                </ul>

            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
{% endblock %}

{% block body %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            var linkId = "#mailbox-link";
            $(linkId).parent().addClass('active');
            $(linkId).parent().siblings().removeClass('active');
        } );
    </script>
{% endblock %}